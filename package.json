{
  "name": "hubot",
  "version": "1.0.0",
  "author": "hubot",
  "keywords": [
    "github",
    "hubot",
    "campfire",
    "bot"
  ],
  "description": "A simple helpful robot for your Company",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hubotio/hubot.git"
  },
  "dependencies": {
    "@slack/client": "^5.0.1",
    "cline": "^0.8.2",
    "connect-multiparty": "^2.1.1",
    "express": "^4.16.3",
    "log": "1.4.0",
    "optparse": "1.0.4"
  },
  "devDependencies": {
    "chai": "~2.1.0",
    "coveralls": "^3.0.2",
    "is-circular": "^1.0.2",
    "mocha": "^9.2.2",
    "mockery": "^1.4.0",
    "nyc": "^15.1.0",
    "semantic-release": "^19.0.2",
    "sinon": "~1.17.0",
    "sinon-chai": "^2.8.0",
    "standard": "^16.0.4"
  },
  "engines": {
    "node": "> 4.0.0",
    "npm": "> 2.0.0"
  },
  "main": "./index",
  "bin": {
    "hubot": "./bin/hubot"
  },
  "scripts": {
    "ci": "node version",
    "start": "bin/hubot",
    "local": "env $(cat .env | xargs) bin/hubot",
    "pretest": "standard --fix",
    "test": "nyc --reporter=html --reporter=text mocha",
    "test:one": "mocha",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "test:smoke": "node src/**/*.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  }
}
